@model List<Projet.Models.Produit>

<h1>Nos Produits</h1>
<div style="display: flex; gap: 20px;">
    @foreach (var p in Model)
    {
        <div style="border: 1px solid #ccc; padding: 10px; width: 250px;">
            <img src="/images/@p.photo" alt="@p.nom_produit" style="width: 100%; height: auto;" />
            <h3>@p.nom_produit</h3>
            <p>@p.description</p>
            <p><strong>@p.prix €</strong></p>
            <p>Stock : @p.stock</p>
        </div>
    }
</div>
